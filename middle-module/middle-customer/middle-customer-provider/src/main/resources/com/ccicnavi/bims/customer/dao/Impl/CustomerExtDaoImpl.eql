-- [listCustomerExt]
SELECT
	cust_uuid,
	legal_rep,
	reg_capital,
	reg_date,
	reg_no,
	business_scope,
	bank_name,
	bank_account,
	pay_unit_name,
	pay_unit_addr,
	pay_unit_tel,
	tax_no,
	comments,
	is_deleted,
	created_time,
	created_uuid,
	created_name,
	updated_time,
	updated_name,
	updated_uuid,
	extend1,
	extend2,
	extend3
FROM
	crm_customer_ext
WHERE is_deleted='N'
        --if legalRep !=null and legalRep != ''
                and legal_rep  like '#legalRep:like#'
            --end
        --if custUuid !=null and custUuid != ''
            and cust_uuid = '#custUuid#'
        --end


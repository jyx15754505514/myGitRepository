        bank_account,
      
      -- iff payUnitName != null and payUnitName != ''
        pay_unit_name,
      
      -- iff payUnitAddr != null and payUnitAddr != ''
        pay_unit_addr,
      
      -- iff payUnitTel != null and payUnitTel != ''
        pay_unit_tel,
      
      -- iff taxNo != null and taxNo != ''
        tax_no,
      
      -- iff comments != null and comments != ''
